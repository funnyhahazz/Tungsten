<UserControl x:Class="Tungsten.Settings.SettingsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tungsten.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource BackgroundBrush}" BorderThickness="0">
            <StackPanel x:Name="SettingPages" Orientation="Vertical"/>
        </Border>
        <Border x:Name="SettingsContent" Grid.Column="2" Background="{StaticResource BackgroundBrush}"/>
        <Border Grid.Column="1" Background="{StaticResource BorderBrush}"/>
    </Grid>
</UserControl>
